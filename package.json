{
  "name": "gemini-desktop",
  "version": "1.0.0",
  "description": "Electron wrapper to run Google Gemini as a Windows desktop app with tray support.",
  "main": "main.js",
  "author": "",
  "license": "Unlicense",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.geminidesktop",
    "productName": "Gemini Desktop",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "Gemini.ico"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "electronmon": "^2.0.0"
  }
}
